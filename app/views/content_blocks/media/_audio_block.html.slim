
ruby:
  classes = []
  classes << "cb-audio-media--#{block[:quantity] || 'single'}"

- if block[:items].present?
  .cb-audio-media class=classes
    .gradient-wrapper
      = render_decoration :gradient, block, size: %i[tall long]

    - if block[:quantity] == 'gallery' && block[:items].length > 1
      = render 'tracks/player', audio: audio_from_block(block)
    - else
      = render 'tracks/player', type: :mini, audio: audio_from_block(block)
