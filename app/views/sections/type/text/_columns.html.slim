
- items = section.extra_attr('items', [])

.top-left.sidetext = section.sidetext

.container
  - if section.title.present?
    h2.title = section.title

  = section.text&.html_safe

  .carousel data-style='columns'
    - use_single_image = (section.images.count != items.count)
    - items.each_with_index do |item, index|
      - image_url = use_single_image ? section.image : section.images[index]
      article class="#{'central' if index == 1}"
        .image
          img src=image_url

        - if item['url'].present?
          a.title href=item['url'] = item['title']
        - else
          .title = item['title']

        p = item['text']
